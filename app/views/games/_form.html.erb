<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :black_1_player_id %><br />
    <%= f.select :black_1_player_id, Player.all.collect{|player| [player.name, player.id]} %>
  </div>
  <div class="field">
    <%= f.label :black_2_player_id %><br />
    <%= f.select :black_2_player_id, Player.all.collect{|player| [player.name, player.id]} %>
  </div>
  <div class="field">
    <%= f.label :yellow_1_player_id %><br />
    <%= f.select :yellow_1_player_id, Player.all.collect{|player| [player.name, player.id]} %>
  </div>
  <div class="field">
    <%= f.label :yellow_2_player_id %><br />
    <%= f.select :yellow_2_player_id, Player.all.collect{|player| [player.name, player.id]} %>
  </div>
  <div class="field">
    <%= f.label :result, "Did yellow win?" %><br />
    <%= f.check_box :result %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
