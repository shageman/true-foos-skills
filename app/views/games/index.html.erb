
<div class="row">
  <div class="span12">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="span5">
    <%= link_to 'New Player', new_player_path %>

    <h1>Ranking</h1>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Rating</th>
        <th>Â± Error</th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% Player.order("mean DESC").all.each_with_index do |player, index| %>
          <tr>
            <td><%= index +1 %></td>
            <td><%= player.name %></td>
            <td><%= player.mean.round %></td>
            <td><%= player.deviation.round %></td>
            <td><%= link_to 'Show', player %></td>
            <td><%= link_to 'Edit', edit_player_path(player) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="span6 offset1">
    <%= link_to 'New Game', new_game_path %>

    <h1>Games</h1>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Black Front</th>
        <th>Black Back</th>
        <th>Yellow Front</th>
        <th>Yellow Back</th>
        <th>Who Won?</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @games.each do |game| %>
          <tr>
            <td><%= game.black_front_player.name %></td>
            <td><%= game.black_back_player.name %></td>
            <td><%= game.yellow_front_player.name %></td>
            <td><%= game.yellow_back_player.name %></td>
            <td><%= game.result ? "YELLOW" : "BLACK" %></td>
            <td><%= link_to 'Edit', edit_game_path(game) %></td>
            <td><%= link_to 'Destroy', game, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>