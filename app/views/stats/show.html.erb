<h1>Statistics</h1>

<div class="row">
  <div class="span6">
    <h3>Overall</h3>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Stat</th>
        <th>#</th>
      </tr>
      </thead>

      <tbody>
      <tr>
        <td>Number of games played</td>
        <td><%= @number_of_games %></td>
      </tr>
      <tr>
        <td>Number of yellow wins</td>
        <td><%= @number_of_yellow_wins %></td>
      </tr>
      <tr>
        <td>Number of black wins</td>
        <td><%= @number_of_black_wins %></td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="span6">
  </div>
</div>

<div class="row">
  <div class="span12">
    Want more stats? <a href="https://github.com/shageman/true-foos-skills">Fork this project and build them!</a>
  </div>
</div>

<div class="row">
  <div class="span6">
    <h3>Morning Players Ranking</h3>
    <%= render partial: "shared/player_ranking", :locals => {:players => @morning_players} %>
  </div>
  <div class="span6">
    <h3>Afternoon Players Ranking</h3>
    <%= render partial: "shared/player_ranking", :locals => {:players => @afternoon_players} %>
  </div>
</div>
